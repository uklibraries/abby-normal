<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p>
      <b>Package:</b>
      <%= render @task.package %>
    </p>
  </div>
  <div class="field">
    <p>
      <b>Type:</b>
      <%= render @task.type %>
    </p>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= collection_select(:task, :status_id, Status.all, :id, :name) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
