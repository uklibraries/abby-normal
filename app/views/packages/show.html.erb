<% title "Package #{File.basename @package.sip_path}" %>
<%= show_title %>

<p>
  <b>Batch:</b>
  <%= render @package.batch %>
</p>

<p>
  <b>Status:</b>
  <%= render @package.status %>
</p>

<p>
  <b>Sip path:</b>
  <%= @package.sip_path %>
</p>

<p>
  <b>Aip identifier:</b>
  <%= @package.aip_identifier %>
</p>

<p>
  <b>Dip identifier:</b>
  <%= @package.dip_identifier %>
</p>

<p>
  <b>Oral history:</b>
  <%= @package.oral_history %>
</p>

<p>
  <b>Dark archive:</b>
  <%= @package.dark_archive %>
</p>

<p>
  <b>Approved:</b>
  <%= @package.approved %>
</p>


<% if can? :update, @package %>
<%= link_to 'Edit', edit_package_path(@package) %> |
<% end %>
<%= link_to 'Back', packages_path %>
