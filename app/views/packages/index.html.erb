<h1>Listing packages</h1>

<%= paginate @packages %>

<table>
  <tr>
    <th>Batch</th>
    <th>Status</th>
    <th>Sip path</th>
    <th>Aip identifier</th>
    <th>Dip identifier</th>
    <th>Approved</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @packages.each do |package| %>
  <tr>
    <td><%= render package.batch %></td>
    <td><%= render package.status %></td>
    <td><%= package.sip_path %></td>
    <td><%= package.aip_identifier %></td>
    <td><%= package.dip_identifier %></td>
    <td><%= package.approved %></td>
    <td><%= link_to 'Show', package %></td>
    <td><%= link_to 'Edit', edit_package_path(package) %></td>
    <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Package', new_package_path %>
